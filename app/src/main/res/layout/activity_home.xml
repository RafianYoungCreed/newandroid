<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:background="@drawable/gf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.projetc.id.tatacarakurban.Home">


    <Button
        android:text="Doa"
        android:layout_width="150px"
        android:layout_height="50px"
        android:background="@drawable/db"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="16dp"
        android:id="@+id/doa"
        android:fontFamily="monospace"
        android:textColor=""
        android:layout_below="@+id/cara"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Rukun"
        android:layout_width="150px"
        android:layout_height="50px"
        android:background="@drawable/db"
        android:layout_marginTop="14dp"
        android:id="@+id/rukun"
        android:fontFamily="monospace"
        android:textColor=""
        android:layout_below="@+id/doa"
        android:layout_alignLeft="@+id/doa"
        android:layout_alignStart="@+id/doa" />

    <Button
        android:text="Cara"
        android:layout_width="150px"
        android:layout_height="50px"
        android:background="@drawable/db"
        style="@style/Widget.AppCompat.Button.Small"
        android:id="@+id/cara"
        android:fontFamily="monospace"
        android:textColor=""
        android:layout_marginTop="12dp"
        android:layout_below="@+id/alat"
        android:layout_alignLeft="@+id/alat"
        android:layout_alignStart="@+id/alat" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tata Cara Penyembelihan Hewan Qurban"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="cursive"
        android:textColor=""
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="100px"
        android:layout_height="100px"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@drawable/ssd"
        android:textColor=""
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></Button>

    <Button
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/ss"
        android:id="@+id/profil"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/aa"
        android:id="@+id/webview"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Alat"
        android:layout_width="150px"
        android:layout_height="50px"
        android:background="@drawable/db"
        android:layout_marginTop="22dp"
        android:id="@+id/alat"
        android:fontFamily="monospace"
        android:textColor=""
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/doa"
        android:layout_alignStart="@+id/doa" />
</RelativeLayout>
