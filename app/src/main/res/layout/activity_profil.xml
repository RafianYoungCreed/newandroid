<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="assalaam.projetc.id.tatacarakurban.profil"
    android:background="@drawable/gf">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="317dp"
        android:layout_height="197dp"
        android:gravity="center"
        android:id="@+id/LinearLayout1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY PROFILE"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="cursive"
            android:textColor=""/>

        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/ff"
            android:id="@+id/imageView2"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/LinearLayout2"
        android:layout_weight="1">
    <TextView
        android:text="Nama : R Rafian F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="cursive"
        android:textSize="15dp"
        android:textColor="" />

    <TextView
        android:text="Jenis kelamin : laki-laki "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView5"
        android:fontFamily="cursive"
        android:textColor=""
        android:textSize="15dp"/>

    <TextView
        android:text="Alamat : Kp.Bojong Kukun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6"
        android:fontFamily="cursive"
        android:textColor=""
        android:textSize="15dp"/>

    <TextView
        android:text="Tempat Tangga Lahir : Bandung,09 Oktober 2000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView7"
        android:fontFamily="cursive"
        android:textColor=""
        android:textSize="15dp"/>

    <TextView
        android:text="Kelas : XII RPL 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="cursive"
        android:textColor=""
        android:textSize="15dp"/>

    </LinearLayout>
</LinearLayout>
